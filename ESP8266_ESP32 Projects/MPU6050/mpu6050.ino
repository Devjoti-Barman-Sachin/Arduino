//-----------------------------------MPU6050------------------------------------
#include <Wire.h>
#include <MPU6050.h>
MPU6050 mpu;
//------------------------------------------------------------------------------



void setup() {
  Serial.begin(9600);

  //-----------------------------------MPU6050------------------------------------
  Wire.begin();
  mpu.initialize();
  //------------------------------------------------------------------------------


}

void loop() {

  //-----------------------------------MPU6050------------------------------------
  int16_t ax, ay, az;
  mpu.getAcceleration(&ax, &ay, &az);

  Serial.print("X: ");
  Serial.println(ax);
  Serial.print("Y: ");
  Serial.println(ay);
  Serial.print("Z: ");
  Serial.println(az);
  delay(1000);
  //------------------------------------------------------------------------------


 

}
